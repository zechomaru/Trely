<section class="content-wrapper">
  <section class="content-header">
    <h1>
      editar paquete
    </h1>
    <ol class="breadcrumb">
      <li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>
      <li class="active">Here</li>
    </ol>
  </section>
  <section class="content">
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <!-- general form elements -->
        <div class="box box-primary">
          <div class="box-header with-border">
            <h3 class="box-title">Nueva</h3>
          </div><!-- /.box-header -->
          <!-- form start -->
          <%= form_for @service, url: {action: "update"}, html:{role: "form", multipart: true} do |f| %>
            <div class="box-body">
              <div class="form-group">
                <label for="exampleInputEmail1">Nombre</label>
                <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "Nombre del paquete" %>
              </div>
              <div class="form-group">
                <label>imagen</label>
                <%= image_tag @service.img.url(:thumb) %>
                <%= f.file_field :img, class: "form-control" %>
              </div>
              <div class="form-group">
                <label>imagen hover</label>
                <%= image_tag @service.imghover.url(:thumb) %>
                <%= f.file_field :imghover, class: "form-control" %>
              </div>
              <div class="form-group">
                <label>Categoria</label>
                <div class="form-group">
                  <%= f.collection_select(:category_id, Category.all, :id, :name) %>
                </div>
              </div>
              <div class="form-group">
                <label>paquete</label>
                <div class="form-group">
                  <%= f.collection_select(:bundle_id, Bundle.all, :id, :name) %>
                </div>
              </div>
            </div><!-- /.box-body -->
            <div class="box-footer">
              <button type="submit" class="btn btn-primary">Atualizar</button>
            </div>
          <%end%>
        </div><!-- /.box -->
      </div>
    </div>
  </section>
</section>