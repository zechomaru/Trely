<section class="content-wrapper">
  <section class="content-header">
    <h1>
      Nuevo Paquete
    </h1>
    <ol class="breadcrumb">
      <li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>
      <li class="active">Here</li>
    </ol>
  </section>
  <section class="content">
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <!-- general form elements -->
        <div class="box box-primary">
          <div class="box-header with-border">
            <h3 class="box-title">Nueva</h3>
          </div><!-- /.box-header -->
          <!-- form start -->
          <%= form_for @page, url: {action: "create"}, html:{role: "form"} do |f| %>
            <div class="box-body">
              <div class="form-group">
                <label for="exampleInputEmail1">Url</label>
                <%= f.text_field :url, autofocus: false, class: "form-control" %>
              </div>
              <div class="form-group">
                <label for="exampleInputEmail1">Titulo</label>
                <%= f.text_field :title, autofocus: true, class: "form-control", placeholder: "Titulo" %>
              </div>
              <div class="form-group">
                <label for="exampleInputEmail1">Sub Titulo</label>
                <%= f.text_field :subtitle, class: "form-control", placeholder: "Sub titulo" %>
              </div>
              <div class="form-group">
                <label for="exampleInputEmail1">Paso uno</label>
                <%= f.text_field :paso_one, class: "form-control", placeholder: "Paso uno" %>
              </div>
              <div class="form-group">
                <label for="exampleInputEmail1">Paso dos</label>
                <%= f.text_field :paso_two, class: "form-control", placeholder: "Paso dos" %>
              </div>
              <div class="form-group">
                <label for="exampleInputEmail1">Paso tres</label>
                <%= f.text_field :paso_tree, class: "form-control", placeholder: "Paso tres" %>
              </div>
              <div class="form-group">
                <label for="exampleInputEmail1">Servicio</label>
                  <%= f.collection_select(:service_id, Service.all, :id, :name, {:include_blank => 'Selecione un servicio'}) %>
              </div>
              <div class="form-group">
                <label for="exampleInputEmail1">Paquete</label>
                  <%= f.collection_select(:bundle_id, Bundle.all, :id, :name, {:include_blank => 'Selecione un paquete'}) %>
              </div>
              <div class="form-group">
                <label for="exampleInputEmail1">Activo</label>
                  <%= f.select(:visibility, [['SI', true], ['NO', false]]) %>
              </div>
            </div><!-- /.box-body -->
            <div class="box-footer">
              <button type="submit" class="btn btn-primary">Crear</button>
            </div>
          <%end%>
        </div><!-- /.box -->
      </div>
    </div>
  </section>
</section>