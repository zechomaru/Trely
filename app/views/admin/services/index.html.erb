<section class="content-wrapper">
  <section class="content-header">
    <h1>
      Todos los servicios
    </h1>
    <ol class="breadcrumb">
      <li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>
      <li class="active">Here</li>
    </ol>
  </section>
  <section class="content">
    <div class="row">
      <div class="col-xs-12">
        <div class="box">
          <div class="box-header">
            <h3 class="box-title"></h3>
            <div class="box-tools">
              <div class="input-group" style="width: 150px;">
                <input type="text" name="table_search" class="form-control input-sm pull-right" placeholder="Search">
                <div class="input-group-btn">
                  <button class="btn btn-sm btn-default"><i class="fa fa-search"></i></button>
                </div>
              </div>
            </div>
          </div><!-- /.box-header -->
          <div class="box-body table-responsive no-padding">
            <table class="table table-hover">
              <tbody><tr>
                <th>Nombre</th>
                <th>Categoria</th>
                <th>Paquete</th>
                <th>Imagen</th>
                <th>Imagen hover</th>
                <th>Fecha de creaci√≥n</th>
                <th>Acciones</th>
              </tr>
              <% @services.each do |service| %>
                <tr>
                  <td><%= service.name %></td>
                  <td><%= service.category.name %></td>
                  <% if service.bundle.nil? %>
                    <td></td>
                  <%else%>
                  <td><%= service.bundle.name %></td>
                  <%end%>
                  <td><%= image_tag service.img.url, style: "width:50px; height:50px;" %></td>
                  <td><%= image_tag service.imghover.url, style: "width:50px; height:50px;" %></td>
                  <td><%= service.created_at.httpdate.to_date %></td>
                  <td>
                    <%= link_to edit_admin_service_path(service) do %>
                      <i class="fa fa-edit"></i>
                    <%end%>
                  </td>
                  <td>
                    <%= link_to admin_service_path(service), method: :delete,
                   data: { confirm: 'Are you sure?' } do %>
                      <i class="fa fa-remove"></i>
                   <%end%>
                   </td>
                  <!--td><span class="label label-success">Approved</span></td>
                  <td>Bacon ipsum dolor sit amet salami venison chicken flank fatback doner.</td-->
                </tr>
              <%end%>
            </tbody></table>
          </div><!-- /.box-body -->
        </div><!-- /.box -->
      </div>
    </div>
  </section>
</section>